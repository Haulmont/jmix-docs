<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://paginationScreen.caption">
    <!-- tag::data[] -->
    <data>
        <collection id="customersDc" class="ui.ex1.entity.Customer"> <!--1-->
            <fetchPlan extends="_base"/>
            <loader id="customersDl"> <!--2-->
                <query>
                    <![CDATA[select e from uiex1_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <!-- end::data[] -->
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <!-- tag::layout-start[] -->
    <layout spacing="true" expand="customersTable">
        <!-- end::layout-start[] -->
        <hbox spacing="true">
            <label value="Pagination with PageChangeEvent: " align="MIDDLE_LEFT" width="270"/>
        <!-- tag::items-options[] -->
        <pagination id="pagination"
                    itemsPerPageVisible="true"
                    itemsPerPageOptions="2, 4, 6">
            <loaderProvider loaderId="customersDl"/>
        </pagination>
        <!-- end::items-options[] -->
        </hbox>
        <hbox spacing="true">
        <label value="Pagination with items per page options and refresh events: " align="MIDDLE_LEFT" width="270px"/>
        <!-- tag::items-options-default[] -->
        <pagination id="paginationWithDefault"
                    itemsPerPageVisible="true"
                    itemsPerPageOptions="2, 4, 6"
                    itemsPerPageDefaultValue="4">
            <loaderProvider loaderId="customersDl"/>
        </pagination>
        <!-- end::items-options-default[] -->
        </hbox>
        <hbox spacing="true">
        <label value="Pagination with different data-binding: " align="MIDDLE_LEFT" width="270"/>
            <vbox spacing="true">
        <!-- tag::pagination-loader-container[] -->
        <pagination>
            <loaderProvider loaderId="customersDl"/> <!--3-->
        </pagination>
        <pagination>
            <containerProvider dataContainer="customersDc"/> <!--4-->
        </pagination>
        <!-- end::pagination-loader-container[] -->
            </vbox>
        </hbox>
        <table id="customersTable" width="100%" dataContainer="customersDc">
            <columns>
                <column id="level"/>
                <column id="age"/>
                <column id="hobby"/>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="rewardPoints"/>
            </columns>
        </table>
        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->
</window>