<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://textAreaScreen.caption">
    <layout>
        <hbox margin="true" spacing="true">
            <!-- tag::text-area[] -->
            <textArea id="textArea" rows="7" caption="msg://ui.ex1.screen.component.textarea/textArea"/>
            <!-- end::text-area[] -->

            <hbox>
                <!-- tag::sized-text-area[] -->
                <textArea id="sizedTextArea" maxLength="100" caption="msg://ui.ex1.screen.component.textarea/sizedTextArea"/>
                <!-- end::sized-text-area[] -->

                <label id="textAreaLabel"/>
            </hbox>

            <!-- tag::styled-text-area[] -->
            <textArea id="styledTextArea"
                      stylename="borderless" caption="msg://ui.ex1.screen.component.textarea/styledArea"/>
            <!-- end::styled-text-area[] -->
        </hbox>
    </layout>
</window>