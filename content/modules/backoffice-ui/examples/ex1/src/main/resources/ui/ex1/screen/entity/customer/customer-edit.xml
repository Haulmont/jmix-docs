<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://customerEdit.caption"
        focusComponent="form">
    <data>
        <instance id="customerDc"
                  class="ui.ex1.entity.Customer">
            <fetchPlan extends="_base"/>
            <loader/>
            <collection id="favoriteBrandsDc" property="favoriteBrands"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="customerDc">
            <column width="350px">
                <textField id="firstNameField" property="firstName"/>
                <textField id="lastNameField" property="lastName"/>
                <textField id="emailField" property="email"/>
                <textField id="rewardPointsField" property="rewardPoints"/>
                <comboBox id="hobbyField" property="hobby" editable="false"/>
                <textField id="ageField" property="age"/>
                <textField id="maritalStatusField" property="maritalStatus"/>
                <comboBox id="levelField" property="level"/>
            </column>
        </form>
        <groupBox id="favoriteBrandsBox" caption="msg://ui.ex1.entity/Customer.favoriteBrands">
            <table id="favoriteBrandsTable" dataContainer="favoriteBrandsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <buttonsPanel>
                    <button action="favoriteBrandsTable.add"/>
                    <button action="favoriteBrandsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
