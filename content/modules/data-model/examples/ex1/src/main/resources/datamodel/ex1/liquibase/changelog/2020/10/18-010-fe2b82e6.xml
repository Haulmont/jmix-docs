<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
<changeSet author="sample" id="1">
        <createTable tableName="SAMPLE_CUSTOMER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SAMPLE_CUSTOMER"/>
            </column>
            <column name="VERSION" type="INT"/>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="sample" id="2">
        <addUniqueConstraint columnNames="EMAIL" constraintName="UC_SAMPLE_CUSTOMER_EMAIL" tableName="SAMPLE_CUSTOMER"/>
    </changeSet>
</databaseChangeLog>